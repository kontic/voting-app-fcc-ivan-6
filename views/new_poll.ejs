<!DOCTYPE html>
<html>
  <head>

    <% include partials/head %>

  </head>
  <body>
    
    <% include partials/header %>
    
    <div class="container">
      <div class="create_vote_container">
        <form id="new_poll_form" class="w3-container" action="/new_poll" method="post">
          <h2 class="w3-text-blue">New Poll</h2>
          <p>      
          <label class="w3-text-blue"><b>Poll Name</b></label>
          <input class="w3-input w3-border" name="poll_name" type="text" required></p>
          <p id="option_items">      
          <label class="w3-text-blue"><b>Options</b></label>
          <input class="w3-input w3-border" name="options_1" type="text" required>
          <input class="w3-input w3-border" name="options_2" type="text" required>
          </p>
        </form>
        <div class="w3-container new_poll_btns">
          <p>      
          <button id="add_opt_btn" class="w3-btn w3-white w3-border w3-border-blue">Add Options</button></p>
          <p>      
          <button type="submit" form="new_poll_form" class="w3-btn w3-blue">Create</button></p>
        </div>
      </div>
    </div>
    
    <% include partials/footer %>
    
    <script>
      $( "#add_opt_btn" ).on( "click", function() {
        var next_item = $("#option_items input").length + 1;
        $( "#option_items" ).append( '<input class="w3-input w3-border" name="options_' + next_item + '" type="text">' );
      });
      
    </script>
    
  </body>
</html>